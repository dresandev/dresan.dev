---
import { getLangFromUrl, useTranslations } from "@/i18n/utils"
import { sectionId } from "@/constants/ids"
import Section from "@/components/section.astro"
import SectionTitle from "@/components/section-title.astro"
import FakeMasonry from "@/components/fake-masonry.astro"
import Intro from "@/components/about-cards/intro.astro"
import MoreAbout from "@/components/about-cards/more-about.astro"
import MoreProjects from "@/components/about-cards/more-projects.astro"
import Greeting from "@/components/about-cards/greeting.astro"
import Experience from "@/components/about-cards/experience.astro"
import Education from "@/components/about-cards/education.astro"
import MyStack from "@/components/about-cards/my-stack.astro"
import LastSongListened from "@/components/about-cards/last-song-listened.astro"

const locale = getLangFromUrl(Astro.url)
const t = useTranslations(locale)
---

<Section id={sectionId.aboutMe}>
  <SectionTitle>{t("about.title")}</SectionTitle>

  <FakeMasonry class="fake-masonry">
    <Intro />
    <MoreAbout />
    <LastSongListened />
    <Greeting />
    <MoreProjects />
    <Experience />
    <Education />
    <MyStack />
  </FakeMasonry>
</Section>

---
import { getLangFromUrl, useTranslations } from "@/i18n/utils"
import Section from "@/components/section.astro"
import CopyEmailButton from "@/components/copy-email-button.astro"

const locale = getLangFromUrl(Astro.url)
const t = useTranslations(locale)

const splittedTitle = t("contact.title").split("-")
---

<Section class="section">
  <h2 class="title">
    {splittedTitle.map((text) => <span>{text}</span>)}
  </h2>
  <CopyEmailButton />
</Section>

<style>
  .section {
    max-inline-size: 1920px;
    margin-inline: auto;
  }

  .title {
    display: grid;
    font-size: clamp(32px, 6.4px + 8vw, 160px);
    font-weight: 900;
    line-height: normal;
  }

  .title > span:last-of-type {
    justify-self: self-end;
  }
</style>

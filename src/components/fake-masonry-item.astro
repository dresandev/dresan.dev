---
import type { FakeMasonryItemID } from "@/types"

interface Props {
  id: FakeMasonryItemID
  class?: string
}

const { id, class: className, ...props } = Astro.props
---

<div data-fake-masonry-item-id={id} class:list={[className, "fake-masonry-item"]} {...props}>
  <slot />
</div>

<style>
  .fake-masonry-item {
    padding: 24px;
    border: 1px solid var(--color-stroke);
    border-radius: 16px;
    background-color: var(--color-card-background);
    break-inside: avoid;
    margin-block-end: 32px;
    transition:
      background-color var(--theme-transition-duration),
      border-color var(--theme-transition-duration);
  }

  :global(.fake-masonry-item h3) {
    text-transform: uppercase;
    padding-block-end: 24px;
    font-weight: 600;
  }
</style>
